<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animated_bg">

    <!-- App Name Header -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BooMA"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:background="#4B0082"
        android:padding="5dp"
        android:gravity="center"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Fullname -->
                <TextView
                    android:text="Fullname"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/wname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Name"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="16dp"/>

                <!-- Email -->
                <TextView
                    android:text="Email"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/wemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Email"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="16dp"/>

                <!-- Phone -->
                <TextView
                    android:text="Phone Number"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/wphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="+91 XXXXX XXXXX"
                    android:inputType="phone"
                    android:layout_marginBottom="16dp"/>

                <!-- DOB -->
                <TextView
                    android:text="Date of Birth"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/wdob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select DOB"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="16dp"/>

                <!-- Age -->
                <TextView
                    android:text="Age"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/wage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Age"
                    android:inputType="number"
                    android:layout_marginBottom="16dp"/>

                <!-- Gender -->
                <TextView
                    android:text="Gender"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <RadioGroup
                    android:id="@+id/wgender"
                    android:layout_marginBottom="16dp" android:layout_height="wrap_content" android:layout_width="wrap_content">

                    <RadioButton android:text="Male" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <RadioButton android:text="Female" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <RadioButton android:text="Other" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                </RadioGroup>

                <!-- Location -->
                <TextView
                    android:text="Location"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fetching current location..."
                    android:focusable="false"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGetLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use Current Location"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="20dp"/>

                <!-- Category -->
                <TextView
                    android:text="Work Category"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="16dp" android:layout_height="wrap_content"/>

                <!-- Education -->
                <TextView
                    android:text="Education"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <Spinner
                    android:id="@+id/eduSpinner"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="16dp" android:layout_height="wrap_content"/>

                <!-- Experience -->
                <TextView
                    android:text="Work Experience (Years)"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/wexp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Experience in years"
                    android:inputType="number"
                    android:layout_marginBottom="16dp"/>

                <!-- Photo -->
                <!-- Profile Photo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Profile Photo"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <!-- Photo Preview -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/photoPreviewContainer"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="gone"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgPhotoPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="@android:color/darker_gray"
                                android:contentDescription="Profile photo preview"/>

                            <!-- Remove Photo Button -->
                            <ImageButton
                                android:id="@+id/btnRemovePhoto"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="top|end"
                                android:layout_margin="4dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_delete"
                                android:contentDescription="Remove photo"/>
                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Upload Button -->
                    <Button
                        android:id="@+id/btnUpload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Photo"/>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue â†’"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/button_hover"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>